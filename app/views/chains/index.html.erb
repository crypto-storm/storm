<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div>
    <div class="flex justify-between items-center">
      <h1 class="font-bold text-4xl">Chains</h1>
      <%= link_to "Add chain", new_chain_path, class: "btn-primary", data: { turbo_frame: dom_id(Chain.new) } %>
    </div>

    <%= turbo_frame_tag dom_id(Chain.new) do %>
    <% end %>

    <%= turbo_frame_tag "chains" do %>
      <div class="min-w-full">
        <% @chains.each do |chain| %>
          <div class="mt-5">
            <%= render chain %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
