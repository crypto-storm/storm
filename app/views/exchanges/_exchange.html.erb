<%= turbo_frame_tag exchange do %>
  <div class="card-dark">
    <div class="ml-4">
      <%= image_tag(exchange.logo, width: 24, height: 24, class: "rounded object-contain") if exchange.logo.attached? %>
    </div>

    <div>
      <%= exchange.name %>
    </div>

    <div data-controller="action-confirmation" class="flex justify-between">
      <%= link_to edit_exchange_path(exchange), data: { turbo_frame: "modal" }, class: "pr-2 mr-2" do %>
        <%= fa_icon 'pencil' %>
      <% end %>

      <%= button_to exchange_path(exchange), method: :delete, data: { action: "click->action-confirmation#confirm" }, class: "pr-2 mr-2" do %>
        <%= fa_icon 'circle-xmark' %>
      <% end %>
    </div>
  </div>
<% end %>
