<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div>
    <div class="flex justify-between items-center">
      <h1 class="font-bold text-4xl">Transactions</h1>
      <div class="flex">
        <%= link_to "Add trade", new_transaction_path, class: "btn-primary mr-1", data: { turbo_frame: "modal" } %>
        <%= link_to "Add purchase", new_purchase_path, class: "btn-primary mr-1", data: { turbo_frame: "modal" } %>
        <%= link_to "Add sale", new_sale_path, class: "btn-primary", data: { turbo_frame: "modal" } %>
      </div>
    </div>

    <%= turbo_frame_tag dom_id(Transaction.new) do %>
    <% end %>

    <%= turbo_frame_tag "transactions" do %>
      <div id="transactions" class="min-w-full">
        <% @transactions.each do |transaction| %>
          <div class="mt-5">
            <%= render transaction %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
