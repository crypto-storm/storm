<%= form_with(model: transaction) do |form| %>
  <% if transaction.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
        <% transaction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex justify-between">
    <div></div>
    <div class="outer-modal bg-dark-800 shadow-dark-1000">
      <%= render "transaction_data/tx_out_form", form: form, transaction: transaction %>
      <%= render "transaction_data/tx_in_form", form: form, transaction: transaction %>

      <div class="flex justify-between">
        <div></div>
        <div class="mt-5">
          <%= form.date_field :date, value: Date.today, class: "date bg-dark-900 hover:bg-dark-700" %>
        </div>
        <div></div>
      </div>

      <div class="mt-5">
        <%= form.submit "Save", class: "modal-btn" %>
      </div>
    </div>
    <div></div>
  </div>
<% end %>
